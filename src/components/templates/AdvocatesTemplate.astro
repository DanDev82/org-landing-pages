---
import { urlFor } from '../../lib/sanityClient';
const { campaignData } = Astro.props;
---
<article class="p-8 max-w-3xl mx-auto bg-green-50">
    <h1 class="text-3xl font-bold mb-4 text-green-800">{campaignData.heading}</h1>
     {campaignData.mainImage && (
        <img
            src={campaignData.heroImage ? urlFor(campaignData.heroImage) : ''}
            alt={campaignData.heading || 'Default alt text'}
            class="mb-4 w-full h-auto object-cover rounded"
        />
    )}
    <p class="text-green-700 mb-6">{campaignData.body}</p>
    <!-- Advocate-specific layout elements -->
    <div class="mt-8 p-4 border border-green-300 rounded">
        <h2 class="text-xl font-semibold text-green-700">Join the Cause</h2>
        <!-- Placeholder for future Give Form -->
        <div class="mt-4 p-6 bg-white rounded shadow">Give Form Area</div>
    </div>
</article>