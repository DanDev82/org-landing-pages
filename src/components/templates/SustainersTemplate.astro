--- 
import { urlFor } from "../../lib/sanityClient";
const { campaignData } = Astro.props;
---
<article class="p-8 max-w-3xl mx-auto bg-blue-50">
    <h1 class="text-3xl font-bold mb-4 text-blue-800">{campaignData.heading}</h1>
    {campaignData.heroImage && (
        <img
            class="w-full h-auto mb-4 rounded-lg shadow-lg"
            src={campaignData.heroImage ? urlFor(campaignData.heroImage) : ''}
            alt={campaignData.heading || 'Default alt text'}
        />
    )}
    <p class="text-blue700 mb-6">{campaignData.body}</p>
    <div class="mt-8 p-4 border border-blue-300 rounded">
        <h2 class="text-xl font-semibold text-blue-700">Sustainers</h2>
        <!-- Placeholder for future Give Form -->
        <div class="mt-4 p-6 bg-white rounded shadow">Give Form Area</div>
    </div>
</article>